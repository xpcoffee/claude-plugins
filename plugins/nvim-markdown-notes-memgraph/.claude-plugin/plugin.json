{
  "name": "nvim-markdown-notes-memgraph",
  "description": "Memgraph-powered knowledge graph MCP server for markdown notes",
  "version": "0.1.0",
  "author": { "name": "xpcoffee" },
  "mcpServers": {
    "nvim-markdown-notes-memgraph": {
      "command": "nvim-markdown-notes-memgraph",
      "args": ["serve"],
      "env": {
        "MEMGRAPH_HOST": "localhost",
        "MEMGRAPH_PORT": "7687",
        "NOTES_ROOT": "${HOME}/notes"
      }
    }
  }
}
